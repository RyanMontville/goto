---
const { title, redirectUrl } = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		{redirectUrl && <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />}
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	@import 'https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0';
	@import url('https://fonts.googleapis.com/css2?family=Roboto+Slab&family=Roboto:wght@400;900&display=swap');

	:root {

	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Roboto Slab';
	}
	
</style>
